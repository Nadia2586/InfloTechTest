@model UserDeleteViewModel

<h2>Delete User</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this user?
</div>

<dl class="row">
    <dt class="col-sm-3">Forename</dt>
    <dd class="col-sm-9">@Model.Forename</dd>

    <dt class="col-sm-3">Surname</dt>
    <dd class="col-sm-9">@Model.Surname</dd>
</dl>

<form asp-action="DeleteConfirm" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
